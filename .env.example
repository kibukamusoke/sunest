# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sunest?schema=public"

# Application
PORT=3000
NODE_ENV=development
EMAIL_VERIFICATION_ENABLED=false

# Authentication
JWT_SECRET="your-secret-key-change-in-production"
